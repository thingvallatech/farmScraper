# Lightweight Dockerfile for Flask Web App Only
# Force rebuild: 2025-11-26
FROM python:3.11-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 appuser

WORKDIR /app

# Copy only web app dependencies
COPY requirements-web.txt .

# Install Python dependencies + gunicorn
RUN pip install --no-cache-dir -r requirements-web.txt && \
    pip install --no-cache-dir gunicorn

# Copy entrypoint script and make it executable
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Copy application code
COPY --chown=appuser:appuser . .

USER appuser

# Use PORT environment variable from Digital Ocean
ENV PORT=8080
EXPOSE 8080

# Set entrypoint and default command
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "2", "--timeout", "120", "webapp.app:app"]
