# Database Configuration
POSTGRES_USER=farm_user
POSTGRES_PASSWORD=farm_password
POSTGRES_DB=farm_scraper
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PgAdmin (optional, for --profile dev)
PGADMIN_EMAIL=admin@farmassist.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# API Keys
NASS_API_KEY=your_nass_api_key_here

# Scraping Configuration
TARGET_STATE=ND  # North Dakota
SCRAPE_DELAY_SECONDS=2.5  # Conservative delay between requests
MAX_CRAWL_DEPTH=3
USER_AGENT=Farm Assist Data Collector (Research/Educational Purpose)

# Storage Paths
DATA_DIR=./data
PDF_DIR=./data/pdfs
RAW_DIR=./data/raw
LOG_DIR=./logs

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json or text

# Pipeline Configuration
ENABLE_TIER1=true  # API sources
ENABLE_TIER2=true  # Web scraping
ENABLE_TIER3=true  # PDF processing
MAX_CONCURRENT_REQUESTS=3
TIMEOUT_SECONDS=30

# Analysis Configuration
CONFIDENCE_THRESHOLD=0.7
MIN_PAYMENT_PROGRAMS=30
MIN_ELIGIBILITY_PROGRAMS=40
MIN_DEADLINE_PROGRAMS=25
